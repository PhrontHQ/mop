{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mop Popcorn App",
            "cwd": "${env:POPCORN_APP_LOCATION}",
            "program": "${workspaceFolder}/optimize.js",
            "args": [".", "-o", "1"],
            "envFile": "${workspaceFolder}/.env.local"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Tests",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "npm",
            "runtimeVersion": "22",
            "runtimeArgs": [
                "test"
            ],
            "console": "integratedTerminal"
        }
    ]
}
